<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eiffel"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="297dp"
        android:layout_height="52dp"
        android:layout_marginBottom="22dp"
        android:layout_marginTop="27dp"
        android:fontFamily="cursive"
        android:text="English to French"
        android:textAlignment="center"
        android:textColor="#E36F6F"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="365dp"
        android:layout_height="608dp"
        android:layout_marginTop="70dp"
        app:columnCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rowCount="4">

        <Button
            android:id="@+id/button1"
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="0"
            android:text="Good\nEvening"
            android:textColorHighlight="#7A3C3C"
            app:iconTint="#F3EFEF"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button2"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="1"
            android:text="Do you\nspeak\nEnglish ?"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button3"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="2"
            android:text="Hello
"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button4"
            android:layout_width="5dp"
            android:layout_height="81dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="3"
            android:text="how are\nyou ?"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button5"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="4"
            android:text="I live\nin..."
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button6"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="5"
            android:text="My name\nis..."
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button7"
            android:layout_width="47dp"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="6"
            android:text="Please"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/button8"
            android:layout_margin="10dp"
            android:backgroundTint="@color/material_on_primary_disabled"
            android:foregroundTint="#683232"
            android:onClick="translateText"
            android:tag="7"
            android:text="Welcome"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1" />

    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>